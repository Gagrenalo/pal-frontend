{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",

    "noEmitOnError": true,
    "removeComments": true,

    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "allowUnreachableCode": false,
    
    "strict": true,
  },
  "include": ["./src/**/*"]
}